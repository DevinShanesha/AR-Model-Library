<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Files</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            padding: 20px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
        }

        .card {
            background-color: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .container {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            width: 50%;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-control {
            background-color: #f8f9fa;
        }

        img{
            border-color: black;
            border-width: 10px;
            border: inset;
            border-radius: 20px;
        }

    </style>
</head>

<body>
    <%- include('./navbar.ejs') %>
        <div class="container">
            <h1 class="text-center mb-4">Files</h1>
            
            <form action="/api/ar/files" method="post">
                <% alldocs.forEach(element=> { %>
                    <div class="form-group">
                        <input type="radio" name="files" value="<%= element.image_filename %>" />
                        <label for="<%= element.image_filename %>" style="font-family: Arial, Helvetica, sans-serif; font-weight: bold">
                            <%= element.image_filename %>
                        </label>
                        <img src="/images/<%= element.image_filename %>" alt="<%= element.image_filename %>" height="50px" width="50px">
                    </div>
                <% }) %>
                <button type="submit" class="btn btn-primary">DELETE</button>
            </form>
        
        </div>

        <% if (err) { %>
            <script>
              alert("File Deleted Successfully");
              </script>
          <% } %>

        <!-- Bootstrap JS -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>