<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Uploads</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
  <style>
    body {
      padding: 20px;
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: #000;
      height: 100vh;
    }

    .container {
      background-color: #ffffff;
      padding: 30px;
      border-radius: 10px;
      width: 50%;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .form-control {
      background-color: #f8f9fa;
    }
    </style>
</head>

<body>
  <%- include('./navbar.ejs') %>
  <div class="container">
    <h1 class="text-center mb-4">Uploads</h1>

    <form action="/api/ar/uploads" method="post" enctype="multipart/form-data">

      <div class="form-group">
        <label for="3dimage" style="font-family:Arial, Helvetica, sans-serif; font-weight: bold;">Choose image</label>
        <div class="custom-file">
          <input type="file" class="custom-file-input" name="image" id="3dimage" />
          <label class="custom-file-label" for="3dimage"></label>
        </div>
      </div>

      <div class="form-group">
        <label for="3dmodel" style="font-family:Arial, Helvetica, sans-serif; font-weight: bold;">Choose model</label>
        <div class="custom-file">
          <input type="file" class="custom-file-input" name="model" id="3dmodel" />
          <label class="custom-file-label" for="3dmodel"></label>
        </div>
      </div>

      <button type="submit" class="btn btn-primary">Upload</button>

    </form>
  </div>

  <script>
    Array.prototype.slice
      .call(document.querySelectorAll(".custom-file-input"))
      .forEach(function (input) {
        const label = input.nextElementSibling;
        const labelVal = label.innerHTML;
        input.addEventListener("change", function (e) {
          const fileName = e.target.files.length
            ? e.target.files[0].name
            : "";
          label.innerHTML = fileName ? `${fileName}` : labelVal;
        });
      });

  </script>

  <% if (arEntry == "uploaded") { %>
    <script>
      alert("Files Uploaded Successfully");
      </script>
  <% } %>
  
  <% if (arEntry == "empty") { %>
    <script>
      alert("Please Select Files to upload");
    </script>
  <% } %>

</body>

</html>